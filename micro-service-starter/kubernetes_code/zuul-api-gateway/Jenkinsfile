def home="micro-service-starter/kubernetes_code/zuul-api-gateway/Dockerfile"
pipeline {
    agent any
    stages{
        stage("checkout"){
            steps{
                checkout scm
            }
        }
        
        stage("build Docker image"){
            steps{
                sh "docker rm -f uppusrinath/zuul_real:${BUILD_NUMBER} "
                sh "docker build -t uppusrinath/zuul_real:${BUILD_NUMBER} ${home}"
            }
        }
    }
}
